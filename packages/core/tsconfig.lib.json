{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "diagnostics": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "../../dist/out-tsc",
    "rootDir": "./",
    "types": ["node"]
  },
  "exclude": ["**/*.spec.ts", "dist", "__tests__"],
  "include": ["**/*.ts", "./references.d.ts"]
}
